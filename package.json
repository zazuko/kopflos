{
  "name": "@zazuko/kopflos",
  "description": "RDF-based web APIs",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --quiet --ignore-path .gitignore",
    "test": "npm run --ws --if-present test",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "author": "Zazuko GmbH",
  "license": "MIT",
  "dependencies": {
    "@zazuko/env-node": "^2.1.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@tpluscode/eslint-config": "^0.5",
    "@types/chai": "^5",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20",
    "@types/readable-stream": "^4.0.15",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "anylogger-console": "^1.1.0-beta.6",
    "c8": "^10.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "mocha": "^10.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "mocha": {
    "extensions": [
      "ts"
    ],
    "loader": "ts-node/esm"
  },
  "c8": {
    "all": true,
    "reporters": [
      "lcovonly",
      "text-summary"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
